    "version": "0.2.0",
    "configurations": [
      {
        "name": "Launch Edge with Live Server",
        "request": "launch",
        "type": "pwa-msedge",
        "url": "http://localhost:5500",
        "webRoot": "${workspaceFolder}"
      },
      {
        "name": "Launch Current File",
        "program": "${file}",
        "request": "launch",
        "skipFiles": [
          "<node_internals>/**"
        ],
        "type": "pwa-node"
      },
      {
        "name": "Launch Program",
        "program": "${workspaceFolder}/app.js",
        "request": "launch",
        "skipFiles": [
          "<node_internals>/**"
        ],
        "type": "pwa-node"
      },
      {
        "name": "Attach",
        "port": 9229,
        "request": "attach",
        "skipFiles": [
          "<node_internals>/**"
        ],
        "type": "pwa-node"
      }
    ]
}